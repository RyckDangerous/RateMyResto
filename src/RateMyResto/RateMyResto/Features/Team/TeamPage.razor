@page "/teams"
@using RateMyResto.Features.Team.Services
@using RateMyResto.Features.Team.Components
@using Microsoft.AspNetCore.Authorization

@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Équipes</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 mb-3">Mes Équipes</h1>
            <p class="text-muted">Gérez vos équipes et participez à des sorties restaurant ensemble.</p>
        </div>

        <div class="col-auto align-self-center">
            <button class="btn btn-success btn-lg me-2" @onclick="_viewService.OpenJoinModal">
                <i class="bi bi-door-open me-2"></i>Rejoindre une équipe
            </button>
            <button class="btn btn-primary btn-lg" @onclick="_viewService.OpenCreateModal">
                <i class="bi bi-plus-circle me-2"></i>Créer une équipe
            </button>
        </div>
    </div>

    @if (_viewService.ViewModel.IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
            <p class="mt-3 text-muted">Chargement de vos équipes...</p>
        </div>
    }
    else
    {
        <!-- Équipes où je suis propriétaire -->
        <div class="mb-5">
            <h2 class="h4 mb-3">
                <i class="bi bi-shield-fill-check text-primary me-2"></i>Mes équipes (Propriétaire)
            </h2>

            @if (_viewService.ViewModel.OwnerEquipes.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

                    @foreach (var equipe in _viewService.ViewModel.OwnerEquipes)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm border-primary">
                                <div class="card-body">

                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0">@equipe.Nom</h5>
                                        <span class="badge bg-primary">Propriétaire</span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(equipe.Description))
                                    {
                                        <p class="card-text text-muted fst-italic">@equipe.Description</p>
                                    }

                                    <div class="d-flex align-items-center text-muted small">
                                        <i class="bi bi-people-fill me-1"></i>
                                        <span>@equipe.Membres.Count membre@(equipe.Membres.Count > 1 ? "s" : "")</span>
                                    </div>
                                </div>

                                <div class="card-footer bg-transparent">
                                    <button class="btn btn-outline-primary btn-sm w-100" @onclick="() => _viewService.OpenTeamDrawer(equipe.Id)">
                                        <i class="bi bi-gear me-1"></i>Gérer l'équipe
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>Vous n'avez pas encore créé d'équipe. Cliquez sur "Créer une équipe" pour commencer !
                </div>
            }
        </div>

        <!-- Équipes où je suis membre -->
        <div class="mb-5">
            <h2 class="h4 mb-3">
                <i class="bi bi-people text-success me-2"></i>Équipes dont je suis membre
            </h2>

            @if (_viewService.ViewModel.MemberEquipes.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

                    @foreach (var equipe in _viewService.ViewModel.MemberEquipes)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0">@equipe.Nom</h5>
                                        <span class="badge bg-success">Membre</span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(equipe.Description))
                                    {
                                        <p class="card-text text-muted fst-italic">@equipe.Description</p>
                                    }

                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-person-badge me-1"></i>Propriétaire : @equipe.OwnerName
                                        </small>
                                    </div>

                                    <div class="d-flex align-items-center text-muted small">
                                        <i class="bi bi-people-fill me-1"></i>
                                        <span>@equipe.Membres.Count membre@(equipe.Membres.Count > 1 ? "s" : "")</span>
                                    </div>
                                </div>

                                <div class="card-footer bg-transparent">
                                    <button class="btn btn-outline-secondary btn-sm w-100" @onclick="() => _viewService.HandleLeaveTeam(equipe.Id)">
                                        <i class="bi bi-box-arrow-right me-1"></i>Quitter l'équipe
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>Vous n'êtes membre d'aucune équipe pour le moment.
                </div>
            }
        </div>
    }
</div>

<!-- Modale de création d'équipe -->
@if (_viewService.ShowCreateModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <h5 class="modal-title">
                        <i class="bi bi-plus-circle me-2"></i>Créer une nouvelle équipe
                    </h5>

                    <button type="button" class="btn-close" @onclick="_viewService.CloseCreateModal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="teamName" class="form-label">Nom de l'équipe <span class="text-danger">*</span></label>
                            <input type="text" 
                                   class="form-control" 
                                   id="teamName" 
                                   @bind="_viewService.NewTeamName" 
                                   placeholder="Ex: Les Gourmets"
                                   maxlength="100"
                                   required />

                            @if (string.IsNullOrWhiteSpace(_viewService.NewTeamName) 
                                && _viewService.NewTeamName != string.Empty)
                            {
                                <div class="text-danger small mt-1">Le nom est obligatoire</div>
                            }
                        </div>

                        <div class="mb-3">
                            <label for="teamDescription" class="form-label">Description</label>
                            <textarea class="form-control" 
                                      id="teamDescription" 
                                      @bind="_viewService.NewTeamDescription"
                                      rows="3"
                                      placeholder="Décrivez votre équipe (optionnel)"
                                      maxlength="500"></textarea>
                            <small class="text-muted">@(_viewService.NewTeamDescription?.Length ?? 0) / 500 caractères</small>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="_viewService.CloseCreateModal">
                        <i class="bi bi-x-circle me-1"></i>Annuler
                    </button>

                    <button type="button" 
                            class="btn btn-primary" 
                            @onclick="_viewService.HandleCreateTeam"
                            disabled="@(string.IsNullOrWhiteSpace(_viewService.NewTeamName))">
                        <i class="bi bi-check-circle me-1"></i>Créer l'équipe
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modale de rejoindre une équipe -->
@if (_viewService.ShowJoinModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-door-open me-2"></i>Rejoindre une équipe
                    </h5>
                    <button type="button" class="btn-close" @onclick="_viewService.CloseJoinModal" aria-label="Close"></button>
                </div>
                
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="teamCode" class="form-label">
                                Code de l'équipe <span class="text-danger">*</span>
                            </label>
                            <input type="text" 
                                   class="form-control @(_viewService.JoinErrorMessage is not null ? "is-invalid" : "")" 
                                   id="teamCode" 
                                   @bind="_viewService.TeamCodeToJoin"
                                   placeholder="Ex: 12345678-1234-1234-1234-123456789abc"
                                   maxlength="36"
                                   required />
                            
                                   @if (_viewService.JoinErrorMessage is not null)
                            {
                                <div class="invalid-feedback d-block">
                                    @_viewService.JoinErrorMessage
                                </div>
                            }

                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Le code d'équipe est fourni par le propriétaire de l'équipe. C'est un identifiant unique (GUID).
                            </small>
                        </div>
                        
                        <div class="alert alert-info">
                            <i class="bi bi-lightbulb me-2"></i>
                            <strong>Astuce :</strong> Demandez le code d'équipe au propriétaire. 
                            Vous le trouverez dans la section "Gestion de l'équipe".
                        </div>
                    </form>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" 
                            @onclick="_viewService.CloseJoinModal">

                        <i class="bi bi-x-circle me-1"></i>Annuler
                    </button>
                    <button type="button" 
                            class="btn btn-success" 
                            @onclick="_viewService.HandleJoinTeam"
                            disabled="@(string.IsNullOrWhiteSpace(_viewService.TeamCodeToJoin))">
                        <i class="bi bi-check-circle me-1"></i>Rejoindre
                    </button>
                </div>
            </div>
        </div>
    </div>
}
