@page "/teams"
@using RateMyResto.Features.Team.Services
@using Microsoft.AspNetCore.Authorization

@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Mes Équipes</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 mb-3">Mes Équipes</h1>
            <p class="text-muted">Gérez vos équipes et participez à des sorties restaurant ensemble.</p>
        </div>
        <div class="col-auto align-self-center">
            <button class="btn btn-primary btn-lg" @onclick="OpenCreateModal">
                <i class="bi bi-plus-circle me-2"></i>Créer une équipe
            </button>
        </div>
    </div>

    @if (_viewService.ViewModel.IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
            <p class="mt-3 text-muted">Chargement de vos équipes...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(_viewService.ViewModel.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@_viewService.ViewModel.ErrorMessage
        </div>
    }
    else
    {
        <!-- Équipes où je suis propriétaire -->
        <div class="mb-5">
            <h2 class="h4 mb-3">
                <i class="bi bi-shield-fill-check text-primary me-2"></i>Mes équipes (Propriétaire)
            </h2>
            @if (_viewService.ViewModel.OwnerEquipes.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var equipe in _viewService.ViewModel.OwnerEquipes)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm border-primary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0">@equipe.Nom</h5>
                                        <span class="badge bg-primary">Propriétaire</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(equipe.Description))
                                    {
                                        <p class="card-text text-muted">@equipe.Description</p>
                                    }
                                    <div class="d-flex align-items-center text-muted small">
                                        <i class="bi bi-people-fill me-1"></i>
                                        <span>@equipe.Membres.Count membre@(equipe.Membres.Count > 1 ? "s" : "")</span>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <button class="btn btn-outline-primary btn-sm w-100">
                                        <i class="bi bi-gear me-1"></i>Gérer l'équipe
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>Vous n'avez pas encore créé d'équipe. Cliquez sur "Créer une équipe" pour commencer !
                </div>
            }
        </div>

        <!-- Équipes où je suis membre -->
        <div class="mb-5">
            <h2 class="h4 mb-3">
                <i class="bi bi-people text-success me-2"></i>Équipes dont je suis membre
            </h2>
            @if (_viewService.ViewModel.MemberEquipes.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var equipe in _viewService.ViewModel.MemberEquipes)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0">@equipe.Nom</h5>
                                        <span class="badge bg-success">Membre</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(equipe.Description))
                                    {
                                        <p class="card-text text-muted">@equipe.Description</p>
                                    }
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-person-badge me-1"></i>Propriétaire : @equipe.OwnerName
                                        </small>
                                    </div>
                                    <div class="d-flex align-items-center text-muted small">
                                        <i class="bi bi-people-fill me-1"></i>
                                        <span>@equipe.Membres.Count membre@(equipe.Membres.Count > 1 ? "s" : "")</span>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <button class="btn btn-outline-secondary btn-sm w-100">
                                        <i class="bi bi-box-arrow-right me-1"></i>Quitter l'équipe
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>Vous n'êtes membre d'aucune équipe pour le moment.
                </div>
            }
        </div>
    }
</div>

<!-- Modale de création d'équipe -->
@if (_showCreateModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-plus-circle me-2"></i>Créer une nouvelle équipe
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateModal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="teamName" class="form-label">Nom de l'équipe <span class="text-danger">*</span></label>
                            <input type="text" 
                                   class="form-control" 
                                   id="teamName" 
                                   @bind="_newTeamName" 
                                   placeholder="Ex: Les Gourmets"
                                   maxlength="100"
                                   required />
                            @if (string.IsNullOrWhiteSpace(_newTeamName) && _newTeamName != string.Empty)
                            {
                                <div class="text-danger small mt-1">Le nom est obligatoire</div>
                            }
                        </div>
                        <div class="mb-3">
                            <label for="teamDescription" class="form-label">Description</label>
                            <textarea class="form-control" 
                                      id="teamDescription" 
                                      @bind="_newTeamDescription" 
                                      rows="3"
                                      placeholder="Décrivez votre équipe (optionnel)"
                                      maxlength="500"></textarea>
                            <small class="text-muted">@(_newTeamDescription?.Length ?? 0) / 500 caractères</small>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseCreateModal">
                        <i class="bi bi-x-circle me-1"></i>Annuler
                    </button>
                    <button type="button" 
                            class="btn btn-primary" 
                            @onclick="HandleCreateTeam"
                            disabled="@(string.IsNullOrWhiteSpace(_newTeamName))">
                        <i class="bi bi-check-circle me-1"></i>Créer l'équipe
                    </button>
                </div>
            </div>
        </div>
    </div>
}
