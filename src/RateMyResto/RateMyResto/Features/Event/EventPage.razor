@page "/events"
@using Microsoft.AspNetCore.Authorization
@using RateMyResto.Features.Event.Models.ViewModels
@using RateMyResto.Features.Event.Services
@using RateMyResto.Features.Shared.Models

@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Événements</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 mb-3">Mes Événements</h1>
            <p class="text-muted">Découvrez les sorties restaurants organisées par vos équipes.</p>
        </div>
        <div class="col-auto align-self-center">
            <button class="btn btn-primary btn-lg" @onclick="_viewService.OpenCreateEventModalAsync">
                <i class="bi bi-plus-circle me-2"></i>Créer un événement
            </button>
        </div>
    </div>

    <!-- Liste des événements par équipe -->
    @if (_viewService.ViewModel.EventsByTeam.Any())
    {
        @foreach (var teamEvents in _viewService.ViewModel.EventsByTeam)
        {
            <div class="mb-5">
                <!-- En-tête de l'équipe -->
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-people-fill text-primary me-2 fs-4"></i>
                    <h2 class="h4 mb-0">@teamEvents.TeamName</h2>
                    <span class="badge bg-secondary ms-2">@teamEvents.Events.Count événement@(teamEvents.Events.Count > 1 ? "s" : "")</span>
                </div>

                <!-- Cartes d'événements -->
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
                    @foreach (var eventCard in teamEvents.Events)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm hover-card @GetCardStatusClass(eventCard.Status)">
                                <!-- Badge de date -->
                                <div class="position-relative">
                                    <div class="event-date-badge @GetDateBadgeClass(eventCard.Status)">
                                        <div class="event-date-day">@eventCard.DateEvent.Day</div>
                                        <div class="event-date-month">@eventCard.DateEvent.ToString("MMM", System.Globalization.CultureInfo.GetCultureInfo("fr-FR")).ToUpper()</div>
                                        <div class="event-date-year">@eventCard.DateEvent.Year</div>
                                    </div>
                                </div>

                                <div class="card-body pt-4">
                                    <!-- Nom du restaurant -->
                                    <h5 class="card-title">
                                        <i class="bi bi-shop text-danger me-2"></i>@eventCard.NomDuRestaurant
                                    </h5>

                                    <!-- Date complète -->
                                    <p class="text-muted small mb-3">
                                        <i class="bi bi-calendar-event me-1"></i>
                                        @eventCard.DateEvent.ToString("dddd d MMMM yyyy", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))
                                    </p>

                                    <!-- Statut de participation -->
                                    <div class="mb-2">
                                        @switch (eventCard.Status)
                                        {
                                            case ParticipationStatus.Invite:
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-envelope me-1"></i>En attente de réponse
                                                </span>
                                                break;
                                            case ParticipationStatus.Confirme:
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Confirmé
                                                </span>
                                                break;
                                            case ParticipationStatus.Decline:
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Décliné
                                                </span>
                                                break;
                                            case ParticipationStatus.Absent:
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-dash-circle me-1"></i>Absent
                                                </span>
                                                break;
                                        }
                                    </div>
                                </div>

                                <!-- Footer avec action -->
                                <div class="card-footer bg-transparent border-top-0">
                                    @if (eventCard.Status == ParticipationStatus.Invite)
                                    {
                                        <div class="d-grid gap-2">
                                            <button class="btn btn-success btn-sm" 
                                                    @onclick="() => _viewService.ConfirmParticipationAsync(eventCard.IdEvent)">
                                                <i class="bi bi-check-lg me-1"></i>Confirmer
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm"
                                                    @onclick="() => _viewService.DeclineParticipationAsync(eventCard.IdEvent)">
                                                <i class="bi bi-x-lg me-1"></i>Décliner
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-primary btn-sm w-100"
                                                @onclick="() => _viewService.OpenDetailPageAsync(eventCard.IdEvent)">
                                            <i class="bi bi-eye me-1"></i>Voir les détails
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <!-- État vide -->
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
            </div>
            <h3 class="text-muted mb-3">Aucun événement</h3>
            <p class="text-muted mb-4">
                Vous n'avez pas encore d'événements prévus.<br />
                Créez votre premier événement pour organiser une sortie restaurant avec votre équipe !
            </p>
        </div>
    }
</div>

<!-- Modale de création d'événement -->
@if (_viewService.ShowCreateEventModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-calendar-plus me-2"></i>Créer un nouvel événement
                    </h5>
                    <button type="button" 
                            class="btn-close btn-close-white" 
                            @onclick="_viewService.CloseCreateEventModalAsync" 
                            aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <form>
                        <!-- Sélection de l'équipe -->
                        <div class="mb-4">
                            <label for="eventTeam" class="form-label fw-bold">
                                <i class="bi bi-people-fill me-1 text-primary"></i>Équipe
                            </label>
                            <select class="form-select" 
                                    id="eventTeam" 
                                    @bind="_viewService.SelectedTeamId"
                                    required>
                                @if (_viewService.AvailableTeams.Any())
                                {
                                    @foreach (var team in _viewService.AvailableTeams)
                                    {
                                        <option value="@team.Id">@team.Nom</option>
                                    }
                                }
                                else
                                {
                                    <option value="">Aucune équipe disponible</option>
                                }
                            </select>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle me-1"></i>Sélectionnez l'équipe pour laquelle organiser l'événement
                            </small>
                        </div>

                        <!-- Nom du restaurant -->
                        <div class="mb-4">
                            <label for="restaurantName" class="form-label fw-bold">
                                <i class="bi bi-shop me-1 text-danger"></i>Nom du restaurant
                            </label>

                            <input type="text" 
                                   class="form-control" 
                                   id="restaurantName" 
                                   @bind="_viewService.EventInput!.NomDuRestaurant" 
                                   placeholder="Ex: Le Gourmet"
                                   maxlength="100"
                                   required />
                            @if (string.IsNullOrWhiteSpace(_viewService.EventInput?.NomDuRestaurant) 
                                && _viewService.EventInput?.NomDuRestaurant != string.Empty)
                            {
                                <div class="text-danger small mt-1">Le nom du restaurant est obligatoire</div>
                            }
                        </div>

                        <!-- Adresse -->
                        <div class="mb-4">
                            <label for="restaurantAddress" class="form-label fw-bold">
                                <i class="bi bi-geo-alt-fill me-1 text-success"></i>Adresse
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="restaurantAddress" 
                                   @bind="_viewService.EventInput!.Adresse" 
                                   placeholder="Ex: 123 Rue de la Paix, 35000 Rennes"
                                   maxlength="255"
                                   required />

                            @if (string.IsNullOrWhiteSpace(_viewService.EventInput?.Adresse) 
                                && _viewService.EventInput?.Adresse != string.Empty)
                            {
                                <div class="text-danger small mt-1">L'adresse est obligatoire</div>
                            }
                        </div>

                        <!-- URL Google Maps (optionnelle) -->
                        <div class="mb-4">
                            <label for="googleMapsUrl" class="form-label fw-bold">
                                <i class="bi bi-map me-1 text-info"></i>Lien Google Maps
                                <span class="text-muted fw-normal">(optionnel)</span>
                            </label>
                            <input type="url" 
                                   class="form-control" 
                                   id="googleMapsUrl" 
                                   @bind="_viewService.EventInput!.UrlGoogleMaps" 
                                   placeholder="https://maps.google.com/..." />
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle me-1"></i>Collez le lien Google Maps pour faciliter l'accès au restaurant
                            </small>
                        </div>

                        <!-- Date de l'événement -->
                        <div class="mb-4">
                            <label for="eventDate" class="form-label fw-bold">
                                <i class="bi bi-calendar-event me-1 text-warning"></i>Date de l'événement
                            </label>
                            <input type="date" 
                                   class="form-control" 
                                   id="eventDate" 
                                   @bind="_viewService.EventInput!.DateEvenement" 
                                   min="@DateOnly.FromDateTime(DateTime.Today).ToString("yyyy-MM-dd")"
                                   required />
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle me-1"></i>La date ne peut pas être dans le passé
                            </small>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="_viewService.CloseCreateEventModalAsync">
                        <i class="bi bi-x-circle me-1"></i>Annuler
                    </button>

                    <button type="button" 
                            class="btn btn-primary" 
                            @onclick="_viewService.HandleCreateEventAsync"
                            disabled="@(string.IsNullOrWhiteSpace(_viewService.EventInput?.NomDuRestaurant) 
                                        ||  string.IsNullOrWhiteSpace(_viewService.EventInput?.Adresse) 
                                        || !_viewService.SelectedTeamId.HasValue)">
                        <i class="bi bi-check-circle me-1"></i>Créer l'événement
                    </button>
                </div>
            </div>
        </div>
    </div>
}
