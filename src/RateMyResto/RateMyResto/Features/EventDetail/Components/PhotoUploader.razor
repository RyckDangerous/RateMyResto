@using Microsoft.AspNetCore.Components.Forms

<div class="photo-uploader-simple">
    <div class="upload-zone-simple">
        @if (_isUploading)
        {
            <!-- État de chargement -->
            <div class="upload-loading text-center">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Upload en cours...</span>
                </div>
                <p class="text-muted mb-0">Envoi de la photo en cours...</p>
            </div>
        }
        else
        {
            <!-- Sélection simple -->
            <div class="upload-content text-center">
                <i class="bi bi-image upload-icon-simple"></i>
                
                <label for="fileInput" class="btn btn-primary btn-lg mt-3">
                    <i class="bi bi-upload me-2"></i>Sélectionner une photo
                </label>
                
                <InputFile id="fileInput" 
                          OnChange="HandleFileSelected" 
                          accept="image/*" 
                          class="d-none" />
                
                <div class="mt-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Formats acceptés : JPG, PNG, GIF, WEBP (max 5 Mo)
                    </small>
                </div>
            </div>
        }
    </div>

    <!-- Messages d'erreur -->
    @if (_errorMessages.Any())
    {
        <div class="alert alert-danger mt-3" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Erreur :</strong>
            <ul class="mb-0 mt-2">
                @foreach (var error in _errorMessages)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
</div>

